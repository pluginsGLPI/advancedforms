{% set available_features = [
    {
        key        : "ip-question",
        title      : __("IP address question type"),
        description: __("This question type will automatically register the user's ip address."),
        icon       : "network",
        input_name : constant(
            "\\GlpiPlugin\\Advancedforms\\Service\\ConfigManager::CONFIG_ENABLE_QUESTION_TYPE_IP",
        ),
        is_enabled : config.isIpAddressQuestionTypeEnabled(),
    },
    {
        key        : "hostname-question",
        title      : __("Hostname question type"),
        description: __("This question type will automatically register the user's hostname."),
        icon       : "label",
        input_name : constant(
            "\\GlpiPlugin\\Advancedforms\\Service\\ConfigManager::CONFIG_ENABLE_QUESTION_TYPE_HOSTNAME",
        ),
        is_enabled : config.isHostnameQuestionTypeEnabled(),
    },
] %}

<div class="py-2 px-3 ms-0">
    <h2
        data-testid="advanced-forms-config-header"
        class="d-flex align-items-center"
    >
        <i class="ti ti-forms me-2"></i>
        {{ __("Advanced forms plugin configuration", "advancedforms") }}
    </h2>

    <form
        method="POST"
        action="{{ 'Config'|itemtype_form_path }}"
        data-track-changes="true"
    >
        <div class="row">
            {% for feature in available_features %}
                <div
                    class="col-12 col-lg-6 col-xxl-4 mb-2"
                    data-testid="feature-{{ feature.key }}"
                >
                    <div class="card cursor-pointer rounded">
                        <div class="card-body d-flex flex-row">
                            <i class="ti ti-{{ feature.icon }} fa-2x me-3 align-self-center"></i>

                            <div>
                                <h3 class="mb-1">{{ feature.title }}</h3>
                                <span class="text-muted">{{ feature.description }}</span>
                            </div>

                            <label class="form-check mb-0 ms-auto form-switch">
                                <input
                                    type="hidden"
                                    value="0"
                                    name="{{ feature.input_name }}"
                                >
                                <input
                                    aria-label="{{ __("Active") }}"
                                    data-glpi-toggle-control
                                    class="form-check-input"
                                    type="checkbox"
                                    name="{{ feature.input_name }}"
                                    value="1"
                                    data-testid="feature-toggle"
                                    {{ feature.is_enabled == true ? "checked" : "" }}
                                >
                            </label>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>

        <input type="hidden" name="config_context" value="advancedforms"/>
        <input type="hidden" name="_glpi_csrf_token" value="{{ csrf_token() }}"/>

        <div class="mx-n2 d-flex">
            <button
                type="submit"
                class="btn btn-primary mt-5 ms-auto"
                name="update"
                value="1"
            >
                <i class="ti ti-device-floppy me-2"></i>
                <span> {{ __("Save") }} </span>
            </button>
        </div>
    </form>
</div>
